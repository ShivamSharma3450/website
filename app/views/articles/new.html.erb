<% provide(:title, 'New news') %>
<h1>New Article!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@article) do |f| %>
      <%= f.label :title, "Title:" %>
      <%= f.text_field :title %>
<br>
      <%= f.label :content, "Content:" %> <br>
      <%= f.text_area :content, :cols => "60", :rows => "10" %>
<br>
      <%= f.submit "Create article", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
