<% provide(:title, "Edit fundraiser") %>
<h1>Update fundraiser</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@fundraiser) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title, 'Title:' %>
      <%= f.text_field :title %>
<br>
      <%= f.label :date, "Date:" %>
      <%= f.date_select :date %>
<br>
      <%= f.label :content %> <br>
      <%= f.text_area :content, :cols => "60", :rows => "10" %>
<br>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
