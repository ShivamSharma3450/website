<% provide(:title, 'Create Fundraiser') %>
<h1>Create Fundraiser!</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@fundraiser) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title, "Title:" %>
      <%= f.text_field :title %>
<br>
      <%= f.label :content, "Details:" %> <br>
      <%= f.text_area :content, :cols => "60", :rows => "10" %>
<br>
      <%= f.label :date, "From date:" %>
      <%= f.date_select :date %>
<br>
      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
